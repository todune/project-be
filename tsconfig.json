{
     "compilerOptions": {
          "target": "es2016",
          "module": "commonjs",
          "rootDir": "./src",
          "moduleResolution": "Node",
          "baseUrl": ".",
          "typeRoots": ["@types", "./node_modules/@types"],
          "resolveJsonModule": true,
          "outDir": "./dist",
          "esModuleInterop": true,
          "forceConsistentCasingInFileNames": true,
          "strict": true,
          "noImplicitAny": true,
          "strictNullChecks": true,
          "strictFunctionTypes": true,
          "noImplicitThis": true,
          "skipLibCheck": true,
          "sourceMap": true,
          "paths": {
               "@services/*": ["./src/services/*"],
               "@common/*": ["./src/common/*"],
               "@configs/*": ["./src/configs/*"],
               "@workers/*": ["src/workers/*"],
               "@models/*": ["src/models/*"]
          }
     },
     "exclude": ["node_modules"],
     "include": ["./src/**/*"]
}
